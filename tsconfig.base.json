{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      // shared aliases
      "@shared-stores": [
        "libraries/shared/stores/index.ts"
      ],
      "@shared-ui": [
        "libraries/shared/ui/src/index.ts"
      ],
      "@shared-utils": [
        "libraries/shared/utils/index.ts"
      ],

      // library aliases
      "@modules/*": [
        "libraries/modules/*/src/index.ts"
      ],

      // module loader aliases
      "@moduleLoader": [
        "libraries/shared/moduleLoader/index.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./vite.d.ts"
  ],
  "exclude": ["node_modules", "tmp"]
}
